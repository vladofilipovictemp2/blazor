@page "/0202IntOperators"

<PageTitle>Operators int</PageTitle>
<h1>Integer operators</h1>
<br/>
You can try to enter "normal" integers, very large integers, numbers that are not 
integers and texts that are not numbers at all.
<br/>
<table>
    <tr>
        <td>First argument:</td>
        <td>
            <input style="text-align:right" @bind="numberOne"/>
        </td>
    </tr>
    <tr>
        <td>Second argument:</td>
         <td>
            <input style="text-align:right" @bind="numberTwo"/>
        </td>
    </tr>
    <tr>
        <td style="text-align:center" colspan="2">
            <button @onclick="Add">Add</button> &nbsp; 
            <button @onclick="Subtract">Subtract</button> &nbsp;
            <button @onclick="Multiply">Multiply</button>
        </td>
    </tr>
</table>
<br/>
Output:
<br/>
<div style="border:solid; border-color:black">
  <p>@message</p>
</div>

@code {
    private string message = "";

    private int numberOne=0;
    private int numberTwo=0;

    private void Add()
    {
        int sum = numberOne + numberTwo;
        message = "Sum is " + sum;
    }

    private void Subtract()
    {
        int difference = numberOne - numberTwo;
        message = "Difference is " + difference;
    }

    private void Multiply()
    {
        int product = numberOne * numberTwo;
        message = "Product is " + product;
    }
}
