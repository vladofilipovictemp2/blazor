@page "/0206BoolVariables"

<PageTitle>Variables bool</PageTitle>
<h1>Type bool</h1>
<br/>
<button @onclick="Execute">Do It!</button>&nbsp;
<button @onclick="Clear">Clear</button>
<br/>
<br/>
<div style="border:solid; border-color:black">
  <pre>@message</pre>
</div>

@code {
    private string message = "";

    private void Clear()
    {
        message = "";
    }

    private void Execute()
    {
        int i = 42;
        double x = 420.0001e-1;
        double y = 4199.9999e-2;
        bool b0 = i < x;
        message = message + i + " < " + x + " is " + b0 + Environment.NewLine;
        System.Console.WriteLine(i + " < " + x + " is " + b0);
        b0 = i < y;
        message = message + i + " < " + y + " is " + b0 + Environment.NewLine;
        System.Console.WriteLine(i + " < " + y + " is " + b0);
        message = message + Environment.NewLine;
        System.Console.WriteLine();

        char ch1 = 'H';
        char ch2 = '!';
        bool b1 = ch1 < ch2;
        message = message + "'" + ch1 + "' < '" + ch2 + "' is " + b1 + Environment.NewLine;
        System.Console.WriteLine("'" + ch1 + "' < '" + ch2 + "' is " + b1);
        message = message + Environment.NewLine;
        System.Console.WriteLine();

        message = message + "not '" + ch1 + "' < '" + ch2 + "' is " + !b1 + Environment.NewLine;
        System.Console.WriteLine("not '" + ch1 + "' < '" + ch2 + "' is " + !b1);
        message = message + Environment.NewLine;
        System.Console.WriteLine();


        char ch3 = 'B';
        char ch4 = 'a';
        bool b2 = ch3 >= ch4;
        message = message + "'" + ch3 + "' >= '" + ch4 + "' is " + b2 + Environment.NewLine;
        System.Console.WriteLine("'" + ch3 + "' >= '" + ch4 + "' is " + b2);
        message = message + Environment.NewLine;
        System.Console.WriteLine();

        message = message + "'" + ch1 + "' < '" + ch2 + "' and '" + ch3 + "' >= '" + ch4 
            + "' is " + (b1 && b2) + Environment.NewLine;
        System.Console.WriteLine("'" + ch1 + "' < '" + ch2 + "' and '" + ch3 + "' >= '" + ch4 
            + "' is " + (b1 && b2));
        message = message + "'" + ch1 + "' < '" + ch2 + "' or '" + ch3 + "' >= '" + ch4 
            + "' is " + (b1 || b2)
                + Environment.NewLine;
        System.Console.WriteLine("'" + ch1 + "' < '" + ch2 + "' or '" + ch3 + "' >= '" + ch4 
            + "' is " + (b1 || b2));
        message = message + Environment.NewLine;
        System.Console.WriteLine();
    }
}
